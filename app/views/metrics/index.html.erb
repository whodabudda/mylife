<p id="notice"><%= notice %></p>

<h1>Listing Metrics</h1>
<style type="text/css">
table#metric_index td:not(:last-child) {
  border-right: 10px solid transparent;
  -webkit-background-clip: padding;
  -moz-background-clip: padding;
  background-clip: padding-box;
}
table#metric_index a{
  color: blue;
}
</style>
<table id="metric_index">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.name %></td>
        <td><%= metric.description %></td>
        <td><%= metric.unit_id %></td>
        <td style="display:none;"><%= metric.duser_id %>  </td>
        <td><%= link_to 'Show', metric %></td>
        <td>  </td>
        <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
        <td> </td>
        <td><%= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Metric', new_metric_path %>
